mixin textfield(text)
    input.textfield_mixin(type="text", name="Email", placeholder=text)
mixin subs_textfield(text)
    .subs_textfield_mixin
        input.subs_textfield(type="email", name="Email", placeholder=text)
        input.subs_textfield_button(type="button")
mixin masked_textfield(text)
        input.textfield_mixin.date_mask(type="text", placeholder=text)